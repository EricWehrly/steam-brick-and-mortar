{
  "name": "steam-brick-and-mortar-client",
  "version": "0.1.0",
  "description": "WebXR VR game launcher with Steam integration",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "serve": "vite --open",
    "start": "vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui", 
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "test:live": "vitest run test/live --config vitest.all.config.ts",
    "test:all": "vitest run --config vitest.all.config.ts",
    "clean": "rm -rf dist node_modules .vite",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/three": "^0.169.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/ui": "^2.1.8",
    "canvas": "^3.1.2",
    "eslint": "^9.17.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8",
    "@webxr-input-profiles/motion-controllers": "^1.0.0"
  },
  "dependencies": {
    "three": "^0.170.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
